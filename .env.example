# Incident Response Chatbot Environment Configuration
# Copy this to .env and update with your actual values

# Grafana Configuration
GRAFANA_URL=http://your-grafana-host:3000
GRAFANA_TOKEN=your-grafana-api-token
GRAFANA_USERNAME=admin
GRAFANA_PASSWORD=your-grafana-password

# Prometheus Configuration  
PROMETHEUS_URL=http://your-prometheus-host:9090
PROMETHEUS_TOKEN=your-prometheus-token

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://your-elasticsearch-host:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-elasticsearch-password

# Nagios Configuration
NAGIOS_URL=http://your-nagios-host/nagios
NAGIOS_USERNAME=nagiosadmin
NAGIOS_PASSWORD=your-nagios-password

# Application Configuration
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_PORT=3000
NGINX_PORT=80
NGINX_SSL_PORT=443

# LLM Configuration (choose one or both)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
LLM_PROVIDER=openai
OPENAI_MODEL=gpt-4-turbo-preview
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Security (for production)
SECRET_KEY=your-secret-key-change-this
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Database (if implementing persistence)
# DATABASE_URL=postgresql://user:password@localhost:5432/incident_response

# SSL Configuration (for HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Docker specific
COMPOSE_PROJECT_NAME=incident-response-chatbot