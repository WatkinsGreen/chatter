# Monitoring Systems Configuration
# Copy this to .env and configure your monitoring systems

# Azure OpenAI (optional)
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_KEY=
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-01

# Grafana
GRAFANA_URL=http://localhost:3000
GRAFANA_TOKEN=
GRAFANA_ENABLED=true
GRAFANA_TIMEOUT=30

# Prometheus
PROMETHEUS_URL=http://localhost:9090
PROMETHEUS_TOKEN=
PROMETHEUS_ENABLED=true
PROMETHEUS_TIMEOUT=30

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_TOKEN=
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_ENABLED=true
ELASTICSEARCH_TIMEOUT=30

# Nagios
NAGIOS_URL=http://localhost/nagios
NAGIOS_TOKEN=
NAGIOS_USERNAME=
NAGIOS_PASSWORD=
NAGIOS_ENABLED=true
NAGIOS_TIMEOUT=30

# Datadog (optional)
DATADOG_URL=https://api.datadoghq.com
DATADOG_API_KEY=
DATADOG_APP_KEY=
DATADOG_ENABLED=false
DATADOG_TIMEOUT=30

# New Relic (optional)
NEWRELIC_URL=https://api.newrelic.com
NEWRELIC_API_KEY=
NEWRELIC_ENABLED=false
NEWRELIC_TIMEOUT=30

# Splunk (optional)
SPLUNK_URL=http://localhost:8089
SPLUNK_TOKEN=
SPLUNK_USERNAME=
SPLUNK_PASSWORD=
SPLUNK_ENABLED=false
SPLUNK_TIMEOUT=30